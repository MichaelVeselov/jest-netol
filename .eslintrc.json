{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:prettier/recommended",
        "airbnb-base",
        "prettier"
    ],
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "requireConfigFile": false
    },
    "plugins": ["prettier"],
    "rules": {
        "prettier/prettier": [
            "error",
            { "endOfLine": "auto", "singleQuote": true, "tabWidth": 4 }
        ],
        "no-restricted-syntax": ["error", "LabeledStatement", "WithStatement"],
        "no-unused-vars": "off",
        "no-plusplus": "off",
        "no-console": "off",
        "import/prefer-default-export": "off",
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "js": "always"
            }
        ]
    }
}
